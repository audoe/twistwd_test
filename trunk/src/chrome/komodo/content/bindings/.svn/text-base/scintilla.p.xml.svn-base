                            ko.tabstops.clearTabstopInfo(view);
                        }
                        if (view) {
                            view.clearMatchingTag();
                        }
                        break;
                    case event.DOM_VK_DELETE:
                        if (ko.tabstops) {
                            ko.tabstops.handleDelete(scimoz);
                        }
