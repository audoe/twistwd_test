                    case event.DOM_VK_BACK_SPACE:
                        if (ko.tabstops) {
                            ko.tabstops.handleBackspace(scimoz);
                        }
                        if (scimoz.selectionIsRectangle) {
                            scimoz.deleteBack();
                            event.stopPropagation();
                            event.preventDefault();
