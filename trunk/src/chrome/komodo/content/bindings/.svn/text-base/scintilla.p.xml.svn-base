                        if (scimoz.autoCActive()) {
                            scimoz.autoCCancel();
                            event.stopPropagation();
                            event.preventDefault();
                            event.cancelBubble = true;
                            return;
                        } else if (scimoz.callTipActive()) {
                            scimoz.callTipCancel();
                            event.stopPropagation();
                            event.preventDefault();
                            event.cancelBubble = true;
                            return;
