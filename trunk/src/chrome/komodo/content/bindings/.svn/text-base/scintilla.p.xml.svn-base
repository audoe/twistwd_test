                }
                if (event.charCode == 0) {
                    return;
                }

                if (scimoz.isFocused) {
                    //dump("event.charCode: " + event.charCode + ", pos " + scimoz.currentPos + "\n");
                    var currentPos = scimoz.currentPos;
