@namespace url("http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul");

view[type='startpage']  {
  -moz-binding: url('chrome://komodo/content/startpage/startpage.xml#view-startpage');
  /*background-image: url(chrome://komodo/skin/startpage/images/bg.gif);*/
  /*background-repeat: no-repeat;*/
  background-color: grey;
  overflow: auto;
}

mrutree  {
  -moz-binding: url('chrome://komodo/content/startpage/startpage.xml#startpage-tree-mru');
}

box[type='startpage']  {
  -moz-binding: url('chrome://komodo/content/startpage/startpage.xml#startpage-box');
}

box[type='startpage-bullet']  {
  -moz-binding: url('chrome://komodo/content/startpage/startpage.xml#startpage-bullet');
}

button.tutorial-button {
  margin: -4px 16px -4px 16px;
}

.startpage-vbox {
}

.startpage-vbox > .startpage-header {
  background-color: #E7E3DE;
  min-height: 21px;
  margin: 0px;
}

.startpage-vbox > .startpage-header > label {
  margin-left: 5px;
  font-weight: bold;
}

.startpage-vbox > .children-box {
  background-color: #F7F3EF;
  margin: 1px 1px 0px 0px;
}
.bullet-vbox {
    padding-left: 32px;
    padding-bottom: 6px;
}
/* Button styles */
treechildren::-moz-tree-image(file-icon),
.file-icon {
  list-style-image: url('chrome://komodo/skin/images/file_icon.png');
}
treechildren::-moz-tree-image(project-icon),
.project-icon {
  list-style-image: url('chrome://komodo/skin/images/project_icon.png');
}

.open-sample {
  list-style-image: url('chrome://komodo/skin/startpage/images/project_icon_16x16.png');
}

.tutorial-icon {
    list-style-image: url("chrome://komodo/skin/startpage/images/tutorial_icon.png");
}
.config-icon {
    list-style-image: url("chrome://komodo/skin/startpage/images/config_icon.gif");
}

.openbox-icon {
    list-style-image : url("chrome://komodo/skin/startpage/images/hollow_arrows_down.gif");
    padding: 1px 3px 1px 3px;
    margin: 1px;
}

.openbox-icon:hover {
    list-style-image : url("chrome://komodo/skin/startpage/images/hollow_arrows_down.gif");
}

.openbox-icon[disabled="true"],
.openbox-icon[disabled="true"]:hover,
.openbox-icon[disabled="true"]:hover:active
{
    list-style-image : url("chrome://komodo/skin/startpage/images/hollow_arrows_down.gif");
}

.closebox-icon {
    list-style-image : url("chrome://komodo/skin/startpage/images/hollow_arrows_up.gif");
    padding: 1px 3px 1px 3px;
    margin: 1px;
}

.closebox-icon:hover {
    list-style-image : url("chrome://komodo/skin/startpage/images/hollow_arrows_up.gif");
}

.closebox-icon[disabled="true"],
.closebox-icon[disabled="true"]:hover,
.closebox-icon[disabled="true"]:hover:active
{
    list-style-image : url("chrome://komodo/skin/startpage/images/hollow_arrows_up.gif");
}
