

/* Tab drag and drop */
.tab-drop-indicator-bar {
  height: 11px;
  margin-top: -11px;
  position: relative;
  /* set -moz-margin-start to -1/2 indicator width: */
  -moz-margin-start: -5px;
}

.tab-drop-indicator {
  height: 11px;
  width: 11px;
  margin-bottom: -5px;
  position: relative;
  background: url('chrome://komodo/skin/tabs/tabDragIndicator.png') 50% 50% no-repeat;
}

/* Tabbrowser arrowscrollbox arrows */
.tabbrowser-arrowscrollbox > .scrollbutton-up {
  -moz-appearance: tab-scroll-arrow-back;
  margin: 0px;
}

.tabbrowser-arrowscrollbox > .scrollbutton-down {
  -moz-appearance: tab-scroll-arrow-forward;
  margin: 0px;
}

/* Ensure the tab buttons are vertically aligned. */
.tabstrip-box
{
  /**
   * This bottom margin is negative because part of the themed tab rectangle
   * can appear showing below the selected tab with certain GTK themes and/or
   * certain Linux OS - ShaneC.
   */
  margin: 0 0 -1px 0;
}

.tabs-bottom .tabstrip-box {
  margin: 0px;
  -moz-box-align: center;
}

/* Ensure the default styling for tab close button is hidden. */
.tab-close-button {
  visibility: hidden;
}
.tab-close-button > image {
  /* Make the close button on the tab smaller (8x8 pixels) */
  margin: -4px -4px -4px -4px;
}

/* Make the tab close button visible when the tab is selected. */
.tab-close-button[selected="true"] {
  visibility: visible;
  margin-left: 4px;
}

view[lastfocused="true"] tab[selected="true"] {
  font-weight: bold;
}

