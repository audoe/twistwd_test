}

.tab-icon {
    padding: 0px;
    margin: 0px;
}

tabs.xxx-small > tab {
    font-size : xx-small;
}

tabs.small > tab {
    font-size: 85%;
}

tab {
  border: none !important;
  padding-top: 0px;
  padding-bottom: 0px;
  margin-top: 3px;
  margin-bottom: 1px;
}

tab[selected="true"] {
  padding-top: 1px;
  margin-top: 1px;
  margin-bottom: 0px;
}

tab.tabs-bottom {
  margin: 0px;
}

/* Menuitem for the selected tab in the tabs-droplist. */
tabs menuitem.selected {
  font-weight: bold;
}
