
scintilla {
  /* Bug 80756: These borders are necessary on Mac OS X so that the "mouseenter"
   * event makes it to the sidebar/bottom-pane splitters when moving the mouse
   * from the scintilla plugin to the splitter. Without this the cursor isn't
   * changed to that for the splitter making it very difficult to grab it.
   */
  border-left: 1px solid rgba(0,0,0,0.10);
  border-right: 1px solid rgba(0,0,0,0.10);
  border-bottom: 1px solid rgba(0,0,0,0.10);
}

:root:not(#komodo_main),
:root:not(#komodo_main) .toolbar-background{
  -moz-appearance: none;
  background-color: transparent;
}

ko-pane
{
  background-color: #d4dde5;
}

ko-pane:-moz-window-inactive {
  background-color: #E4E4E4;
}

ko-pane .tabs-vertical-label .tab-text,
ko-pane[type="sidebar"] .tab-text {
  /* Same style as for `sidebar-title` in Mozilla's 
     "pinstripe/browser/browser.css". */
  font: menu;
  font-weight: bold;
  color: #535f6d;
}
