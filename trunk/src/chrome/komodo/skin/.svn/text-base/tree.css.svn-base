/*
 * CSS for some <tree> usage in Komodo.
 */


/* Support for checkbox images in a <treecol type="checkbox"> */
treechildren::-moz-tree-checkbox
{
    /* unchecked checkbox treecells */
    list-style-image: url("chrome://komodo/skin/images/checkbox_bordered_unchecked.png");
}
treechildren::-moz-tree-checkbox(checked)
{
    /* checked checkbox treecells */
    list-style-image: url("chrome://komodo/skin/images/checkbox_bordered_checked.png");
}
treechildren::-moz-tree-checkbox(disabled)
{
    /* disabled checkbox treecells */
    opacity: 0.25;
}
treechildren::-moz-tree-column(sort-column)
{
    background: #eee;
}

.treecol-image {
    padding-left: 4px;
    padding-right: 4px;
    min-width: 20px;
}
