<tr>
		<% if @show_actions %>
			<td>
				<%= link_to "Edit", edit_book_url(book) %>
				<br/>
				<%= link_to "Delete", book_url(book), :method => "delete" %>
				<br/>
				<%= link_to "Read", new_reading_url(book) %>
			</td>
		<% end %>
    <td class="thumb_col">
			<% if book.image_url_small %>
				<%= link_to(image_tag(book.image_url_small), book.url) %>
			<% end %>
		</td>
    <td><%= link_to book.title, book_url(book) %></td>

    <td>
			<%= render :partial => "tag", :collection => book.tags, :spacer_template => "home/slash" %>
    </td>
</tr>
